@using ihff_project.Models;
@model IEnumerable<Producten>

@{
    ViewBag.Title = "Home Page";
}

<div class="w3-content w3-display-container">
    @foreach (Producten product in Model)
    {<a href='@Url.Action("Cultuur", "Product")'>
         <img class="mySlides" src="@product.Image_Path" style="height:360px; width:1000px">
    </a>
        <div class="w3-display-bottomleft w3-container w3-padding-16 w3-black">
            @product.Highlight_text_EN
        </div>}
    <button class="w3-button w3-display-left w3-black" onclick="plusDivs(-1)">&#10094;</button>
    <button class="w3-button w3-display-right w3-black" onclick="plusDivs(1)">&#10095;</button>
</div>

<script>
    var slideIndex = 1;
    showDivs(slideIndex);

    function plusDivs(n) {
        showDivs(slideIndex += n);
    }

    function showDivs(n) {
        var i;
        var x = document.getElementsByClassName("mySlides");
        if (n > x.length) { slideIndex = 1 }
        if (n < 1) { slideIndex = x.length }
        for (i = 0; i < x.length; i++) {
            x[i].style.display = "none";
        }
        x[slideIndex - 1].style.display = "block";
    }
</script>

<div class="row">
    <div class="col-md-4">
        <h2>Events</h2>
        <p>Great movies and inspiring specials</p>
        <p>@Html.ActionLink("See all available activities", "Events", "Product", new { dag = 0 }, new { @class = "btn btn-default" })</p>
        <h2>Food</h2>
        <p>Delicious food in exquisite restaurants</p>
        <p>@Html.ActionLink("See all available restaurants", "Restaurants", "Product", null, new { @class = "btn btn-default" })</p>
        <h2>Culture</h2>
        <p>Experience the rich culture of the city</p>
        <p>@Html.ActionLink("Points of interest in Haarlem", "Events", "Product", null, new { @class = "btn btn-default" })</p>
    </div>
    <div class="col-md-4">
        <h2>Film&Food Tickets</h2>
        <p>The perfect combination of a movie and a culinary experience. Enjoyment a it's finest.</p>
        <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Order Film&Food Ticket &raquo;</a></p>
        <h2>Day Tickets</h2>
        <p>Go to two movies and an iHff special on a single day for one great price.</p>
        <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Order Day Ticket &raquo;</a></p>
        <h2>Film&Food Tickets</h2>
        <p>Make your own movie programme. You can put together the movies you want to see during the entire festival. Order tickets for two or more movies to get a 5% discount!</p>
